---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
}

const { title, description, keywords, ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Image Open Graph - URL complète
const fullOgImage = ogImage 
  ? new URL(ogImage, Astro.site).toString() 
  : new URL('/images/fabrika.jpg', Astro.site).toString();

// Numéros de contact
const phoneNumber = '+90 535 104 90 52'; 
const whatsappNumber = '905351049052';
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:locale" content="tr_TR" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />
    
    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Ozso WC Kabinleri",
        "description": "Kayseri'de WC kabinleri ve aksesuarları üretimi. B2B toplu satış ve proje hizmetleri.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Kayseri",
          "addressCountry": "TR"
        },
        "telephone": "+90 535 104 90 52",
        "priceRange": "$$",
        "image": "https://wcbolmeleri.com/images/fabrika.jpg",
        "url": "https://wcbolmeleri.com"
      }
    </script>
    
    <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-HTVBNW1ZQY"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-HTVBNW1ZQY');
</script>
    
    <!-- Event Tracking Functions -->
    <script is:inline>
      // Tracking pour clics téléphone
      function trackPhoneClick() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'conversion', {
            'send_to': 'AW-XXXXXXXXX/XXXXXX', // À CONFIGURER
            'event_category': 'Contact',
            'event_label': 'Phone Click'
          });
        }
        console.log('Phone click tracked');
      }
      
      // Tracking pour clics WhatsApp
      function trackWhatsAppClick() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'conversion', {
            'send_to': 'AW-XXXXXXXXX/XXXXXX', // À CONFIGURER
            'event_category': 'Contact',
            'event_label': 'WhatsApp Click'
          });
        }
        console.log('WhatsApp click tracked');
      }
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <slot />
  </body>
</html>
