---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
}

const { title, description, keywords, ogImage = '/og-image.jpg' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Numéros de contact
const phoneNumber = '+90 533 403 90 96'; 
const whatsappNumber = '905334039096';
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="tr_TR" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Ozso WC Kabinleri",
        "description": "Kayseri'de WC kabinleri ve aksesuarları üretimi. B2B toplu satış ve proje hizmetleri.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Kayseri",
          "addressCountry": "TR"
        },
        "telephone": "+90 533 403 90 96",
        "priceRange": "$$",
        "image": "https://ozso.com.tr/og-image.jpg"
      }
    </script>
    
    <!-- Google Tag Manager (GTM) - À CONFIGURER -->
    <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=AW-XXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-XXXXXXXXX');
    </script> -->
    
    <!-- Event Tracking Functions -->
    <script is:inline>
      // Tracking pour clics téléphone
      function trackPhoneClick() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'conversion', {
            'send_to': 'AW-XXXXXXXXX/XXXXXX', // À CONFIGURER
            'event_category': 'Contact',
            'event_label': 'Phone Click'
          });
        }
        console.log('Phone click tracked');
      }
      
      // Tracking pour clics WhatsApp
      function trackWhatsAppClick() {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'conversion', {
            'send_to': 'AW-XXXXXXXXX/XXXXXX', // À CONFIGURER
            'event_category': 'Contact',
            'event_label': 'WhatsApp Click'
          });
        }
        console.log('WhatsApp click tracked');
      }
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <slot />
  </body>
</html>
